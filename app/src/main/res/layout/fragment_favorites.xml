<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.FavoritesFragment"
    android:background="#DCDCDC"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="รายการโปรด"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="7dp"
        android:background="@drawable/background_prongsai_3"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/LinearLayoutClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="30dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/background_prongsai_2"
            android:layout_weight="1">

            <TextView
                android:id="@+id/product_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เสื้อ liverpool"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/liverpool" />

            <Button
                android:id="@+id/btn_add_favorites1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unfavorites"
                android:textSize="10dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@drawable/backbotton_1"
                android:drawableLeft="@drawable/ic_heart"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutClick2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="30dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/background_prongsai_2"
            android:layout_weight="1">

            <TextView
                android:id="@+id/product_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ชื่อสินค้า 1 *"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/s2" />

            <Button
                android:id="@+id/btn_add_favorites2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basketball"
                android:textSize="10dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@drawable/backbotton_1"
                android:drawableLeft="@drawable/ic_heart"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>