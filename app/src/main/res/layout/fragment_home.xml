<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    tools:context=".ui.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/background_prongsai_3"
            android:padding="8dp">

            <TextView
                android:id="@+id/nav_home"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="EXC"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>



            <ImageView
                android:id="@+id/btnheart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_heart"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <!-- Banner -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="2dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/banner"/>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- การ์ดหมวด TOY -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp">

                <!-- ใช้ LinearLayout แนวนอนเพื่อให้ภาพอยู่ขวา -->
                <LinearLayout
                    android:background="@drawable/background_prongsai_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- ส่วนข้อความทางซ้าย -->
                    <LinearLayout
                        android:layout_width="500dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        android:gravity="start">

                        <Button
                            android:id="@+id/btn_toy"
                            android:layout_width="90dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="0dp"
                            android:layout_marginStart="10dp"
                            android:text="🧸 TOY"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:backgroundTint="#F5FF9F"/>

                        <Button
                            android:id="@+id/btn_user"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_marginBottom="0dp"
                            android:layout_marginStart="10dp"
                            android:text="🙎🏻‍♂️ User234534"
                            android:textSize="9dp"
                            android:textStyle="bold"
                            android:paddingStart="10dp"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#303030"
                            android:ellipsize="none"
                            android:singleLine="true"
                            android:scrollHorizontally="true" />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginStart="10dp"
                            android:text="ตุ๊กตาหมี ซื้อมา 2 ปี สภาพดี ไม่มีตำหนิ"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp"/>

                        <Button
                            android:id="@+id/btn_exchange"
                            android:layout_width="110dp"
                            android:layout_height="32dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginStart="10dp"
                            android:text="EXCHANGE"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#000000"/>

                    </LinearLayout>


                    <!-- ภาพด้านขวา -->
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/teddy_bear" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="8dp"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_prongsai"
                        android:text="  ❤ Favorites  "
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_marginRight="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_prongsai"
                        android:text="  🕒 History  "
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_marginRight="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_prongsai"
                        android:text="  🧍‍♂️ Following  "
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_marginRight="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_prongsai"
                        android:text="  🧾 Orders  "
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#000000"/>
                </LinearLayout>
            </HorizontalScrollView>



        </LinearLayout>

        <!-- แถวการ์ด: ซ้ายใหญ่ / ขวา 2 ใบ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- การ์ดซ้าย (ใหญ่) -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="320dp"
                android:layout_margin="6dp"
                android:layout_weight="2"
                app:cardCornerRadius="22dp"
                app:cardElevation="6dp">

                <!-- ใช้ LinearLayout เป็นพื้นหลังรูป แล้ววางคอนเทนต์ทับ (ไม่ต้องใช้ Frame/Relative) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="14dp"
                    android:gravity="top"
                    android:background="@drawable/pokemon">  <!-- ใช้รูปเป็นพื้นหลัง -->

                    <Button
                        android:id="@+id/btn_toy2"
                        android:layout_width="90dp"
                        android:layout_height="32dp"
                        android:text="🧸 TOY"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:backgroundTint="#F5FF9F"/>

                    <Button
                        android:id="@+id/btn_user2"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="🙎🏻‍♂️ User234534"
                        android:textSize="9dp"
                        android:textStyle="bold"
                        android:paddingStart="10dp"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#303030"
                        android:ellipsize="none"
                        android:singleLine="true"
                        android:scrollHorizontally="true" />

                    <!-- ดันคอนเทนต์ลงล่างให้เหมือน overlay -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <!-- ชื่อ + คำอธิบาย + ปุ่ม EXCHANGE -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pokemon:"
                            android:textStyle="bold"
                            android:textSize="22sp"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="ฟิกเกอร์โปเกมอนขนาดกระทัดรัด ขนไม่ลอก สีสวย"
                            android:textSize="13sp"
                            android:textColor="#F0F0F0"/>

                        <Button
                            android:id="@+id/btn_exchange2"
                            android:layout_width="110dp"
                            android:layout_height="32dp"
                            android:text="EXCHANGE"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#000000"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- คอลัมน์ขวา: 2 การ์ดเล็กซ้อนกัน -->
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <!-- ใบบน -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="6dp"

                    app:cardCornerRadius="22dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:background="@drawable/hoodie">  <!-- ใส่รูปเสื้อ -->


                        <Button
                            android:id="@+id/btn_fashion"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="🥼 FASHION"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:backgroundTint="#CC7CF8E5"/>

                        <Button
                            android:id="@+id/btn_user3"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="🙎🏻‍♂️ User234534"
                            android:textSize="9dp"
                            android:textStyle="bold"
                            android:paddingStart="10dp"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#303030"
                            android:ellipsize="none"
                            android:singleLine="true"
                            android:scrollHorizontally="true" />

                        <!-- ดันลงล่าง -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <Button
                            android:id="@+id/btn_exchange3"
                            android:layout_width="110dp"
                            android:layout_height="32dp"
                            android:text="EXCHANGE"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#000000"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- ใบล่าง -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:background="@drawable/lighting_setup">  <!-- ใส่รูปอุปกรณ์ถ่ายภาพ -->

                        <Button
                            android:id="@+id/btn_utensils"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="🥼 UTENSILS"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:backgroundTint="#CCFFB0C9"/>


                        <!-- ผู้ใช้ -->
                        <Button
                            android:id="@+id/btn_user4"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="🙎🏻‍♂️ User234534"
                            android:textSize="9dp"
                            android:textStyle="bold"
                            android:paddingStart="10dp"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#303030"
                            android:ellipsize="none"
                            android:singleLine="true"
                            android:scrollHorizontally="true" />

                        <!-- ดันลงล่าง -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <Button
                            android:id="@+id/btn_exchange4"
                            android:layout_width="110dp"
                            android:layout_height="32dp"
                            android:text="EXCHANGE"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#000000"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
</ScrollView>
