<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ExchangeFragment"
    android:background="#DCDCDC"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="@color/black"
        android:text="รายการของทั้งหมด"
        android:textSize="18dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="6dp"
        android:background="@drawable/background_prongsai_3"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/LinearLayoutClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="30dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/background_prongsai_2"
            android:layout_weight="1"> <!-- เพิ่ม layout_weight เป็น 1 เพื่อให้พื้นที่เท่ากัน -->

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:srcCompat="@android:drawable/ic_menu_report_image"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/product_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ชื่อสินค้า 1 *"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnAddFavorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Favorites"
                android:textSize="10dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@drawable/backbotton_1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutClick2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="30dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/background_prongsai_2"
            android:layout_weight="1"> <!-- เพิ่ม layout_weight เป็น 1 เพื่อให้พื้นที่เท่ากัน -->

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:srcCompat="@android:drawable/ic_menu_report_image"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/product_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ชื่อสินค้า 1 *"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_add_favorites2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Favorites"
                android:textSize="10dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@drawable/backbotton_1"/>

        </LinearLayout>

    </LinearLayout>






    <!-- Move LinearLayout2 below LinearLayout1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="6dp"
        android:layout_marginHorizontal="6dp"
        android:background="@drawable/background_prongsai_3"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/LinearLayoutClick3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="30dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/background_prongsai_2"
            android:layout_weight="1"> <!-- เพิ่ม layout_weight เป็น 1 เพื่อให้พื้นที่เท่ากัน -->

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:srcCompat="@android:drawable/ic_menu_report_image"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/product_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ชื่อสินค้า 1 *"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_add_favorites3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Favorites"
                android:textSize="10dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@drawable/backbotton_1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutClick4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="30dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/background_prongsai_2"
            android:layout_weight="1"> <!-- เพิ่ม layout_weight เป็น 1 เพื่อให้พื้นที่เท่ากัน -->

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:srcCompat="@android:drawable/ic_menu_report_image"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/product_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ชื่อสินค้า 1 *"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_add_favorites4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Favorites"
                android:textSize="10dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@drawable/backbotton_1"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
