<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F0F0F0"
    tools:context=".ui.ProfileViewerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top bar -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:gravity="center_vertical"
            android:background="@android:color/white">

            <ImageButton
                android:id="@+id/btnBackProfile"
                style="?attr/borderlessButtonStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="back"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_backblack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_marginStart="8dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgTopAvatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_setting"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <!-- Header Image -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/imgHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/profile1" />
        </FrameLayout>

        <!-- Profile Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgProfileAvatar"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/profile2"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="starryskies23"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/txtUserHandle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" @starryskies_23"
                        android:textColor="#777777"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Follower and Like info -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="348 Followers"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â¤ï¸ 1.2K Likes"
                    android:textColor="#E53935"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnFollow"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Follow"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#111111"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnMessage"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Message"
                    android:textAllCaps="false"
                    android:backgroundTint="#DDDDDD"
                    android:textColor="#111111" />
            </LinearLayout>
        </LinearLayout>

        <!-- Posts Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <!-- Horizontal Scroll -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Card 1 -->
                    <FrameLayout
                        android:layout_width="220dp"
                        android:layout_height="300dp"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/post1"
                            android:scaleType="centerCrop"
                            android:clipToOutline="true" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="bottom"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5 days ago"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Shoulder bag"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Small but satisfying, not too small in style."
                                android:textColor="#DDDDDD"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </FrameLayout>

                    <!-- Card 2 -->
                    <FrameLayout
                        android:layout_width="220dp"
                        android:layout_height="300dp"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/post2"
                            android:scaleType="centerCrop"
                            android:clipToOutline="true" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="bottom"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7 days ago"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hat"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Wear it and look cool. Enhance your look every day."
                                android:textColor="#DDDDDD"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </FrameLayout>

                    <!-- Card 3 -->
                    <FrameLayout
                        android:layout_width="220dp"
                        android:layout_height="300dp"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/post3"
                            android:scaleType="centerCrop"
                            android:clipToOutline="true" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="bottom"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8 days ago"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="High-heels"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Turn heads with every stride."
                                android:textColor="#DDDDDD"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </FrameLayout>

                    <!-- Card 4 -->
                    <FrameLayout
                        android:layout_width="220dp"
                        android:layout_height="300dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/post4"
                            android:scaleType="centerCrop"
                            android:clipToOutline="true" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="bottom"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9 days ago"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="High-heels"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Elegance that elevates you."
                                android:textColor="#DDDDDD"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </FrameLayout>

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>


        <!-- History Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Successful exchange completed 50 times. ðŸ…"
                android:textColor="#444444"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
